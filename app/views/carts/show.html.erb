<% if notice %>
	<p id="notice">
	<%= notice %></p>
<% end %>
<h2>Your Aqua Heli Cart</h2>
<table>
	<% @cart.line_items.each do |item| %> 
		<tr>
			<td><%= item.quantity %>&times;</td>
			<td><%= item.product.title %></td>
			<td class="item_price"><%= number_to_currency(item.total_price) %></td>
			<td><%= button_to 'Remove product', item, method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %></td>
		</tr>
	<% end %>
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: "Are you sure you don't wanna buy this awesome array of Aqua Heli gear?" } %>